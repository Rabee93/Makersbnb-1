<!DOCTYPE html>
<html>
<head>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <!-- <script type="text/javascript" src="src/interface.js"></script> -->
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>

  <button onclick="document.getElementById('id01').style.display='block'" style="width:auto;">Make a listing</button>

<h1>Welcome, <span id="user-name"><%= username %></span>!</h1>


<div id="id01" class="modal">
  <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
  <form class="modal-content" action="/make_listing" method="post">
    <div class="container">
      <h1>Make a listing:</h1>
      <hr>
      <label for="listing_name" ><b>Name</b></label>
      <input type="text" placeholder="Enter Listing Name" name="listing_name" required>
      <label for="listing_description"><b>Description</b></label><br>
      <!-- <input type="text" placeholder="Enter Description" name="listing_description" required> -->
      <!-- <label for="listing_description">Enter Description:</label> -->
      <textarea name="listing_description" rows="4" cols="50"></textarea><br>
      <label for="price"><b>Price</b></label>
      <input type="text" placeholder="Enter Price" name="listing_price" required>
      <label for="dates"><b>Date from: </b></label>
      <input type="date" placeholder="Enter Date" name="listing_date_from" required>
      <label for="dates"><b>Date to: </b></label>
      <input type="date" placeholder="Enter Date" name="listing_date_to" required>
    </div>
    <div class="clearfix">
      <button type="submit" class="signupbtn">Submit listing</button>
    </div>
  </form>
</div>

<h1>Spaces</h1>
<ul>
<% spaces.map((space) => { %>
  <li>Name: <%= space.name %> Â£<%= space.price %></li>
  <li>Description: <%= space.description %></li>
  <br>
<% }); %>
</ul>

</body>

</html>
